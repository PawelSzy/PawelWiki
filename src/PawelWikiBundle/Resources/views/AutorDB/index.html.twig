
{% set tytul = 'Pawel Wiki lista autorow' %}
{% extends "PawelWikiBundle:Default:szablon_wiki_strona.html.twig" %}

    {% block content %}
        <h1>AutorDB list</h1>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Login</th>
     
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('autordb_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.login }}</td>
                    
                    <td>{{ entity.email }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('autordb_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('autordb_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <ul>
            <li>
                <a href="{{ path('autordb_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    {% endblock %}  


